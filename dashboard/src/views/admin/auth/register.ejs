<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Register</title>
	<link href="/adminAssets/css/style.css" rel="stylesheet" type="text/css">

    <style>
		.toast-container {
			position: fixed;
			top: 10px;
			right: 20px;
			z-index: 1000; 
		}
	</style>

</head>

<body class="vh-100" style="background-image:url('/adminAssets/images/bg.png'); background-position:center;">
   
    <div class="authincation h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100 align-items-center">
                <div class="col-md-6">
                    <div class="authincation-content">
                        <div class="row no-gutters">
                            <div class="col-xl-12">
                                <div class="auth-form">
									<div class="text-center mb-3">
										<a href="#"><img src="/adminAssets/images/logo/logo-full.png" alt=""></a>
									</div>
                                    <h4 class="text-center mb-4">Sign up your account</h4>
                                    <% if (typeof error !== 'undefined' && error) { %>
                                        <div style="color: red; font-weight: bold;">
                                            <%= error %>
                                        </div>
                                    <% } else if (typeof success !== 'undefined' && success) { %>
                                        <div style="color: green; font-weight: bold;">
                                            <%= success %>
                                        </div>
                                    <% } %>
                                    <form method="POST" action="/admin/auth/register-submit" id="loginForm" onsubmit="return validateForm();">
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Username</strong></label>
                                            <input type="text" name="username" class="form-control" placeholder="username" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Email</strong></label>
                                            <input type="email" name="email" class="form-control" placeholder="hello@example.com" required>
                                        </div>
                                        <div class="mb-3">
                                            <label class="mb-1"><strong>Password</strong></label>
                                            <input type="password" name="password" class="form-control" value="Password" autocomplete="off" required>
                                        </div>
                                        <div class="text-center mt-4">
                                            <button type="submit" class="btn btn-primary btn-block">Sign me up</button>
                                        </div>
                                    </form>
                                    <div class="new-account mt-3">
                                        <p>Already have an account? <a class="text-primary" href="/admin/auth/login">Sign in</a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!-- Required vendors -->
<script src="adminAssets/vendor/global/global.min.js"></script>
<script src="adminAssets/js/custom.js"></script>
<script src="adminAssets/js/deznav-init.js"></script>


</body>
</html>